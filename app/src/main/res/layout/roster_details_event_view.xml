<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

  <TextView
    android:id="@+id/text_event_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/roster_details_event_name_text"
    android:textSize="@dimen/roster_details_event_text_size"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:text="ICLCK"/>

  <TextView
    android:id="@+id/text_from_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_x1"
    android:textColor="@color/roster_details_event_info_text"
    android:textSize="@dimen/roster_details_event_text_size"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@+id/text_event_name"
    tools:text="OSL"/>

  <TextView
    android:id="@+id/text_from_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_x1"
    android:textColor="@color/roster_details_event_info_text"
    android:textSize="@dimen/roster_details_event_text_size"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@+id/text_from_location"
    tools:text="L 04:30"/>

  <TextView
    android:id="@+id/text_to_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_x1"
    android:textColor="@color/roster_details_event_info_text"
    android:textSize="@dimen/roster_details_event_text_size"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@+id/text_from_time"
    tools:text="DUB"/>

  <TextView
    android:id="@+id/text_to_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_x1"
    android:textColor="@color/roster_details_event_info_text"
    android:textSize="@dimen/roster_details_event_text_size"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@+id/text_to_location"
    tools:text="L 07:30"/>

  <TextView
    android:id="@+id/text_phone_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_x1"
    android:layout_marginStart="@dimen/spacing_x1"
    android:autoLink="phone"
    android:textIsSelectable="true"
    android:textColor="@color/roster_details_event_info_text"
    android:textSize="@dimen/roster_details_event_text_size"
    app:layout_constraintTop_toBottomOf="@+id/text_event_name"
    app:layout_constraintStart_toEndOf="@+id/text_event_name"
    tools:text="+48737495793478"/>

</merge>