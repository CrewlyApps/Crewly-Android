<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:padding="10dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:srcCompat="@drawable/icon_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/rank_select_title"
        android:textColor="@color/rank_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/image_close"
        app:layout_constraintBottom_toBottomOf="@+id/image_close"
        app:layout_constraintLeft_toRightOf="@+id/image_close"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.crewly.crew.RankView
        android:id="@+id/rank_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/image_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rank_two"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <com.crewly.crew.RankView
        android:id="@+id/rank_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/image_close"
        app:layout_constraintLeft_toRightOf="@+id/rank_one"
        app:layout_constraintRight_toLeftOf="@+id/rank_three"/>

    <com.crewly.crew.RankView
        android:id="@+id/rank_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/image_close"
        app:layout_constraintLeft_toRightOf="@+id/rank_two"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.crewly.crew.RankView
        android:id="@+id/rank_four"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rank_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rank_five"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <com.crewly.crew.RankView
        android:id="@+id/rank_five"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rank_two"
        app:layout_constraintLeft_toRightOf="@+id/rank_four"
        app:layout_constraintRight_toLeftOf="@+id/rank_six"/>

    <com.crewly.crew.RankView
        android:id="@+id/rank_six"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rank_three"
        app:layout_constraintLeft_toRightOf="@+id/rank_five"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.crewly.crew.RankView
        android:id="@+id/rank_seven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rank_four"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/rank_four"/>

    <com.crewly.crew.RankView
        android:id="@+id/rank_eight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rank_five"
        app:layout_constraintLeft_toRightOf="@+id/rank_seven"
        app:layout_constraintRight_toRightOf="@+id/rank_five"/>

</merge>