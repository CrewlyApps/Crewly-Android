<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <TextView
        android:id="@+id/text_departure_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/roster_details_sector_text_size"
        android:textColor="@color/roster_details_sector_time_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/text_departure_airport"
        app:layout_constraintHorizontal_chainStyle="spread"
        tools:text="06:00"/>

    <TextView
        android:id="@+id/text_departure_airport"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="@dimen/roster_details_sector_text_size"
        android:textColor="@color/roster_details_sector_airport_text"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/text_departure_time"
        app:layout_constraintBottom_toBottomOf="@+id/text_departure_time"
        app:layout_constraintLeft_toRightOf="@+id/text_departure_time"
        app:layout_constraintRight_toLeftOf="@+id/text_flight_id"
        tools:text="DUB"/>

    <TextView
        android:id="@+id/text_flight_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="@dimen/roster_details_sector_text_size"
        android:textColor="@color/roster_details_sector_flight_id_text"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/text_departure_time"
        app:layout_constraintBottom_toBottomOf="@+id/text_departure_time"
        app:layout_constraintLeft_toRightOf="@+id/text_departure_airport"
        app:layout_constraintRight_toLeftOf="@+id/text_arrival_airport"
        tools:text="756"/>

    <TextView
        android:id="@+id/text_arrival_airport"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="@dimen/roster_details_sector_text_size"
        android:textColor="@color/roster_details_sector_airport_text"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/text_departure_time"
        app:layout_constraintBottom_toBottomOf="@+id/text_departure_time"
        app:layout_constraintLeft_toRightOf="@+id/text_flight_id"
        app:layout_constraintRight_toLeftOf="@+id/text_arrival_time"
        tools:text="EDI"/>

    <TextView
        android:id="@+id/text_arrival_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="@dimen/roster_details_sector_text_size"
        android:textColor="@color/roster_details_sector_time_text"
        app:layout_constraintTop_toTopOf="@+id/text_departure_time"
        app:layout_constraintBottom_toBottomOf="@+id/text_departure_time"
        app:layout_constraintLeft_toRightOf="@+id/text_arrival_airport"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="10:35"/>

</merge>