<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <com.crewly.views.DateHeaderView
    android:id="@+id/text_date_header"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:gravity="center_vertical"
    android:layout_marginStart="@dimen/spacing_x2"
    android:textSize="@dimen/text_xl1"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/image_duty_icon"
    tools:text="2019APRIL22"/>

  <ImageView
    android:id="@+id/image_duty_icon"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginTop="@dimen/spacing_x1"
    android:layout_marginBottom="@dimen/spacing_x1"
    android:layout_marginEnd="@dimen/spacing_x2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:src="@drawable/icon_asby"/>

</androidx.constraintlayout.widget.ConstraintLayout>