<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roster_list_background">

    <include layout="@layout/roster_details_toolbar"/>

    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/roster_details_screen_vertical_margin"
        android:layout_marginLeft="@dimen/roster_details_screen_horizontal_margin"
        android:layout_marginRight="@dimen/roster_details_screen_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_roster_details"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_summary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roster_details_summary_title"
                style="@style/RosterDetailsTitleText"/>

            <TextView
                android:id="@+id/text_current_timezone_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/roster_details_current_timezone_label"
                app:layout_constraintTop_toBottomOf="@+id/text_summary_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/text_current_timezone"
                style="@style/RosterDetailsLabelText"/>

            <TextView
                android:id="@+id/text_current_timezone"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/text_current_timezone_label"
                app:layout_constraintBottom_toBottomOf="@+id/text_current_timezone_label"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="Dublin"
                style="@style/RosterDetailsInfoText"/>

            <TextView
                android:id="@+id/text_duty_time_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/roster_details_duty_time_label"
                app:layout_constraintTop_toBottomOf="@+id/text_current_timezone_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/text_duty_time"
                style="@style/RosterDetailsLabelText"/>

            <TextView
                android:id="@+id/text_duty_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/text_duty_time_label"
                app:layout_constraintBottom_toBottomOf="@+id/text_duty_time_label"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="12h 45m"
                style="@style/RosterDetailsInfoText"/>

            <TextView
                android:id="@+id/text_flight_time_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/roster_details_flight_time_label"
                app:layout_constraintTop_toBottomOf="@+id/text_duty_time_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/text_flight_time"
                style="@style/RosterDetailsLabelText"/>

            <TextView
                android:id="@+id/text_flight_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/text_flight_time_label"
                app:layout_constraintBottom_toBottomOf="@+id/text_flight_time_label"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="12h 45m"
                style="@style/RosterDetailsInfoText"/>

            <TextView
                android:id="@+id/text_sectors_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/roster_details_sectors_title"
                app:layout_constraintTop_toBottomOf="@+id/text_flight_time_label"
                style="@style/RosterDetailsTitleText"/>

            <LinearLayout
                android:id="@+id/list_sectors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/text_sectors_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>