<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_roster_empty"
        android:layout_width="@dimen/roster_list_empty_image_dimension"
        android:layout_height="@dimen/roster_list_empty_image_dimension"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/icon_roster_empty"/>

    <TextView
        android:id="@+id/text_roster_empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/roster_list_empty_text"
        android:textColor="@color/roster_list_empty_text"
        android:textSize="@dimen/roster_list_empty_text_size"
        app:layout_constraintTop_toBottomOf="@+id/image_roster_empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_fetch_roster"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/account_fetch_roster"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/round_button_statelist"
        app:layout_constraintTop_toBottomOf="@+id/text_roster_empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</merge>