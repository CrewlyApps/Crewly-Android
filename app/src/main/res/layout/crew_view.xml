<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

  <TextView
    android:id="@+id/text_crew_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_x2"
    android:paddingBottom="@dimen/spacing_x2"
    android:paddingStart="@dimen/spacing_x2"
    android:paddingEnd="@dimen/spacing_x2"
    android:textSize="@dimen/text_m1"
    android:textColor="@color/text_black_primary"
    android:textAllCaps="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/text_crew_rank"
    tools:text="Margaret Space Zombie"/>

  <TextView
    android:id="@+id/text_crew_rank"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_x1"
    android:paddingBottom="@dimen/spacing_x1"
    android:paddingEnd="@dimen/spacing_x2"
    android:textSize="@dimen/text_m1"
    android:textColor="@color/text_black_primary"
    app:layout_constraintTop_toTopOf="@+id/text_crew_name"
    app:layout_constraintBottom_toBottomOf="@+id/text_crew_name"
    app:layout_constraintEnd_toStartOf="@+id/image_crew_rank"
    tools:text="FO"/>

  <ImageView
    android:id="@+id/image_crew_rank"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:layout_marginEnd="@dimen/spacing_x2"
    app:layout_constraintTop_toTopOf="@+id/text_crew_name"
    app:layout_constraintBottom_toBottomOf="@+id/text_crew_name"
    app:layout_constraintEnd_toEndOf="parent"
    tools:srcCompat="@drawable/icon_rank_1"/>

</merge>