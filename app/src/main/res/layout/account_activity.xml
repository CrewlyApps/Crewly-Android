<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/drawer_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true">

  <android.support.constraint.ConstraintLayout
    android:id="@+id/container_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/account_toolbar" />

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/toolbar_account">

      <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/roster_list_background"
        android:paddingBottom="80dp">

        <android.support.constraint.Guideline
          android:id="@+id/guide_left"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_begin="@dimen/account_horizontal_padding" />

        <android.support.constraint.Guideline
          android:id="@+id/guide_right"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_end="@dimen/account_horizontal_padding" />

        <com.crewly.views.CompoundDrawableTextView
          android:id="@+id/text_header_crew"
          style="@style/AccountHeaderText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="@string/account_header_crew"
          app:drawableStartCompat="@drawable/icon_crew"
          app:layout_constraintLeft_toRightOf="@+id/guide_left"
          app:layout_constraintRight_toLeftOf="@+id/guide_right"
          app:layout_constraintTop_toTopOf="parent" />

        <View
          android:id="@+id/indicator_joined_company"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          app:layout_constraintBottom_toBottomOf="@+id/text_joined_company_label"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_crew"
          app:layout_constraintTop_toBottomOf="@+id/text_header_crew" />

        <TextView
          android:id="@+id/text_joined_company_label"
          style="@style/AccountLabelText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/button_white_statelist"
          app:layout_constraintLeft_toRightOf="@+id/indicator_joined_company"
          app:layout_constraintRight_toLeftOf="@+id/barrier_joined_company"
          app:layout_constraintTop_toBottomOf="@+id/text_header_crew"
          tools:text="Joined Ryanair on" />

        <TextView
          android:id="@+id/text_joined_company_date"
          android:layout_width="@dimen/account_right_action_width"
          android:layout_height="wrap_content"
          android:background="@drawable/button_white_statelist"
          android:gravity="center"
          android:minHeight="@dimen/account_right_action_min_height"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:textColor="@color/text_black_primary"
          android:textSize="@dimen/account_button_text_size"
          app:layout_constraintRight_toRightOf="@+id/text_header_crew"
          app:layout_constraintTop_toBottomOf="@+id/text_header_crew"
          tools:text="21\nDecember\n2015" />

        <android.support.constraint.Barrier
          android:id="@+id/barrier_joined_company"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:barrierDirection="start"
          app:constraint_referenced_ids="text_joined_company_date,guide_right" />

        <View
          android:id="@+id/indicator_show_crew"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          app:layout_constraintBottom_toBottomOf="@+id/switch_show_crew"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_crew"
          app:layout_constraintTop_toTopOf="@+id/switch_show_crew" />

        <TextView
          android:id="@+id/text_show_crew_label"
          style="@style/AccountLabelText"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:text="@string/account_show_crew"
          app:layout_constraintBottom_toBottomOf="@+id/switch_show_crew"
          app:layout_constraintLeft_toRightOf="@+id/indicator_show_crew"
          app:layout_constraintRight_toLeftOf="@+id/switch_show_crew"
          app:layout_constraintTop_toTopOf="@+id/switch_show_crew" />

        <android.support.v7.widget.SwitchCompat
          android:id="@+id/switch_show_crew"
          android:layout_width="@dimen/account_right_action_width"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingTop="@dimen/account_switch_padding"
          android:paddingEnd="@dimen/account_switch_padding"
          android:paddingBottom="@dimen/account_switch_padding"
          android:scaleX="1.4"
          android:scaleY="1.4"
          android:theme="@style/CrewlySwitch"
          app:layout_constraintRight_toRightOf="@+id/text_header_crew"
          app:layout_constraintTop_toBottomOf="@+id/text_joined_company_label" />

        <View
          android:id="@+id/indicator_rank"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          app:layout_constraintBottom_toBottomOf="@+id/image_rank"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_crew"
          app:layout_constraintTop_toTopOf="@+id/image_rank" />

        <TextView
          android:id="@+id/text_rank_label"
          style="@style/AccountLabelText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/button_white_statelist"
          android:text="@string/account_your_rank"
          app:layout_constraintLeft_toRightOf="@+id/indicator_rank"
          app:layout_constraintRight_toLeftOf="@+id/barrier_rank"
          app:layout_constraintTop_toBottomOf="@+id/text_show_crew_label" />

        <ImageView
          android:id="@+id/image_rank"
          android:layout_width="@dimen/account_right_action_width"
          android:layout_height="0dp"
          android:background="@drawable/button_white_statelist"
          android:padding="10dp"
          app:layout_constraintBottom_toBottomOf="@+id/text_rank_label"
          app:layout_constraintRight_toRightOf="@+id/text_header_crew"
          app:layout_constraintTop_toTopOf="@+id/text_rank_label"
          tools:src="@drawable/icon_rank_captain" />

        <android.support.constraint.Barrier
          android:id="@+id/barrier_rank"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:barrierDirection="start"
          app:constraint_referenced_ids="image_rank,guide_right" />

        <com.crewly.views.CompoundDrawableTextView
          android:id="@+id/text_header_roster"
          style="@style/AccountHeaderText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="@string/account_header_roster"
          app:drawableStartCompat="@drawable/icon_roster"
          app:layout_constraintLeft_toRightOf="@+id/guide_left"
          app:layout_constraintRight_toLeftOf="@+id/guide_right"
          app:layout_constraintTop_toBottomOf="@+id/image_rank" />

        <View
          android:id="@+id/indicator_fetch_roster"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          android:background="@color/account_header_background"
          app:layout_constraintBottom_toBottomOf="@+id/button_fetch_roster"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_roster"
          app:layout_constraintTop_toTopOf="@+id/button_fetch_roster" />

        <Button
          android:id="@+id/button_fetch_roster"
          style="@style/AccountButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/account_fetch_roster"
          app:layout_constraintLeft_toRightOf="@+id/indicator_fetch_roster"
          app:layout_constraintRight_toRightOf="@+id/text_header_roster"
          app:layout_constraintTop_toBottomOf="@+id/text_header_roster" />

        <View
          android:id="@+id/indicator_salary"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          app:layout_constraintBottom_toBottomOf="@+id/text_salary_label"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_roster"
          app:layout_constraintTop_toTopOf="@+id/text_salary_label" />

        <TextView
          android:id="@+id/text_salary_label"
          style="@style/AccountLabelText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/account_salary_label"
          app:layout_constraintLeft_toLeftOf="@+id/indicator_salary"
          app:layout_constraintRight_toLeftOf="@+id/button_salary"
          app:layout_constraintTop_toBottomOf="@+id/button_fetch_roster" />

        <Button
          android:id="@+id/button_salary"
          style="@style/RoundButton"
          android:text="@string/account_salary_update"
          app:layout_constraintBottom_toBottomOf="@+id/text_salary_label"
          app:layout_constraintRight_toRightOf="@+id/text_header_roster"
          app:layout_constraintTop_toTopOf="@+id/text_salary_label" />

        <com.crewly.views.CompoundDrawableTextView
          android:id="@+id/text_header_account"
          style="@style/AccountHeaderText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="@string/account_header_account"
          app:drawableStartCompat="@drawable/icon_account"
          app:layout_constraintLeft_toRightOf="@+id/guide_left"
          app:layout_constraintRight_toLeftOf="@+id/guide_right"
          app:layout_constraintTop_toBottomOf="@+id/text_salary_label" />

        <View
          android:id="@+id/indicator_crewly_privacy"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          android:background="@color/account_header_background"
          app:layout_constraintBottom_toBottomOf="@+id/button_crewly_privacy"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_account"
          app:layout_constraintTop_toTopOf="@+id/button_crewly_privacy" />

        <Button
          android:id="@+id/button_crewly_privacy"
          style="@style/AccountButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/account_crewly_privacy"
          app:layout_constraintLeft_toRightOf="@+id/indicator_crewly_privacy"
          app:layout_constraintRight_toRightOf="@+id/text_header_account"
          app:layout_constraintTop_toBottomOf="@+id/text_header_account" />

        <View
          android:id="@+id/indicator_delete_data"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          android:background="@color/account_header_background"
          app:layout_constraintBottom_toBottomOf="@+id/button_delete_data"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_account"
          app:layout_constraintTop_toTopOf="@+id/button_delete_data" />

        <Button
          android:id="@+id/button_delete_data"
          style="@style/AccountButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/account_delete_data"
          app:layout_constraintLeft_toRightOf="@+id/indicator_delete_data"
          app:layout_constraintRight_toRightOf="@+id/text_header_account"
          app:layout_constraintTop_toBottomOf="@+id/button_crewly_privacy" />

        <com.crewly.views.CompoundDrawableTextView
          android:id="@+id/text_header_contact"
          style="@style/AccountHeaderText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="@string/account_header_contact"
          app:drawableStartCompat="@drawable/icon_contact"
          app:layout_constraintLeft_toRightOf="@+id/guide_left"
          app:layout_constraintRight_toLeftOf="@+id/guide_right"
          app:layout_constraintTop_toBottomOf="@+id/button_delete_data" />

        <View
          android:id="@+id/indicator_email"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          android:background="@color/account_header_background"
          app:layout_constraintBottom_toBottomOf="@+id/button_email"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_contact"
          app:layout_constraintTop_toTopOf="@+id/button_email" />

        <Button
          android:id="@+id/button_email"
          style="@style/AccountButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/account_email"
          app:layout_constraintLeft_toRightOf="@+id/indicator_email"
          app:layout_constraintRight_toRightOf="@+id/text_header_contact"
          app:layout_constraintTop_toBottomOf="@+id/text_header_contact" />

        <View
          android:id="@+id/indicator_facebook"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          android:background="@color/account_header_background"
          app:layout_constraintBottom_toBottomOf="@+id/button_facebook"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_contact"
          app:layout_constraintTop_toTopOf="@+id/button_facebook" />

        <Button
          android:id="@+id/button_facebook"
          style="@style/AccountButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/account_facebook"
          app:layout_constraintLeft_toRightOf="@+id/indicator_facebook"
          app:layout_constraintRight_toRightOf="@+id/text_header_contact"
          app:layout_constraintTop_toBottomOf="@+id/button_email" />

        <com.crewly.views.CompoundDrawableTextView
          android:id="@+id/text_header_app"
          style="@style/AccountHeaderText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="@string/account_header_app"
          app:drawableStartCompat="@drawable/icon_android"
          app:layout_constraintLeft_toRightOf="@+id/guide_left"
          app:layout_constraintRight_toLeftOf="@+id/guide_right"
          app:layout_constraintTop_toBottomOf="@+id/button_facebook" />

        <View
          android:id="@+id/indicator_app_version"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          android:background="@color/account_header_background"
          app:layout_constraintBottom_toBottomOf="@+id/text_app_version_label"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_app"
          app:layout_constraintTop_toTopOf="@+id/text_app_version_label" />

        <TextView
          android:id="@+id/text_app_version_label"
          style="@style/AccountLabelText"
          android:layout_width="0dp"
          android:layout_height="@dimen/account_button_min_height"
          android:text="@string/account_app_version_label"
          app:layout_constraintLeft_toRightOf="@+id/indicator_app_version"
          app:layout_constraintRight_toLeftOf="@+id/text_app_version"
          app:layout_constraintTop_toBottomOf="@+id/text_header_app" />

        <TextView
          android:id="@+id/text_app_version"
          android:layout_width="@dimen/account_right_action_width"
          android:layout_height="@dimen/account_button_min_height"
          android:gravity="center"
          android:textColor="@color/text_black_primary"
          android:textSize="@dimen/account_right_action_text_size"
          app:layout_constraintRight_toRightOf="@+id/text_header_app"
          app:layout_constraintTop_toBottomOf="@+id/text_header_app"
          tools:text="1.0.0" />

        <View
          android:id="@+id/indicator_rate_app"
          style="@style/AccountVerticalIndicator"
          android:layout_height="0dp"
          android:background="@color/account_header_background"
          app:layout_constraintBottom_toBottomOf="@+id/button_rate_app"
          app:layout_constraintLeft_toLeftOf="@+id/text_header_app"
          app:layout_constraintTop_toTopOf="@+id/button_rate_app" />

        <Button
          android:id="@+id/button_rate_app"
          style="@style/AccountButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/account_rate_app"
          app:layout_constraintLeft_toRightOf="@+id/indicator_rate_app"
          app:layout_constraintRight_toRightOf="@+id/text_header_app"
          app:layout_constraintTop_toBottomOf="@+id/text_app_version_label" />

      </android.support.constraint.ConstraintLayout>

    </ScrollView>

  </android.support.constraint.ConstraintLayout>

  <android.support.design.widget.NavigationView
    android:id="@+id/navigation_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    app:headerLayout="@layout/nav_header"
    app:itemIconTint="@color/nav_drawer_statelist"
    app:itemTextColor="@color/nav_drawer_statelist"
    app:menu="@menu/nav_drawer_menu" />

</android.support.v4.widget.DrawerLayout>