<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:datePickerStyle">@style/DatePickerTheme</item>
    <item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <!-- Common -->

  <style name="CrewlySwitch" parent="Theme.AppCompat.Light">
    <item name="colorControlActivated">@color/account_selected</item>
    <item name="android:colorForeground">@color/account_unselected</item>
    <item name="colorSwitchThumbNormal">@color/account_unselected</item>
  </style>

  <style name="DatePickerTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
    <item name="android:datePickerStyle">@android:style/Widget.Material.Light.DatePicker</item>
    <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
  </style>

  <style name="DatePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
    <item name="android:textColor">@color/text_primary_accent</item>
  </style>

  <style name="PrimaryContentHeader" parent="android:Widget.TextView">
    <item name="android:paddingTop">@dimen/primary_content_header_vertical_padding</item>
    <item name="android:paddingBottom">@dimen/primary_content_header_vertical_padding</item>
    <item name="android:paddingLeft">@dimen/primary_content_header_left_padding</item>
    <item name="android:textSize">@dimen/primary_content_header_text_size</item>
    <item name="android:textColor">@color/primary_content_header_text</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/primary_content_header_background</item>
  </style>

  <style name="PrimaryLabel" parent="android:Widget.TextView">
    <item name="android:layout_marginTop">@dimen/primary_label_top_margin</item>
    <item name="android:layout_marginEnd">@dimen/primary_label_right_margin</item>
    <item name="android:textColor">@color/primary_label_text</item>
    <item name="android:textSize">@dimen/primary_label_text_size</item>
  </style>

  <style name="PrimaryInfo" parent="android:Widget.TextView">
    <item name="android:textColor">@color/primary_info_text</item>
    <item name="android:textSize">@dimen/primary_info_text_size</item>
  </style>

  <!-- Screens -->

  <style name="AccountHeaderText" parent="@android:style/Widget.TextView">
    <item name="android:paddingTop">15dp</item>
    <item name="android:paddingBottom">15dp</item>
    <item name="android:paddingLeft">@dimen/account_horizontal_padding</item>
    <item name="android:paddingRight">@dimen/account_horizontal_padding</item>
    <item name="android:drawablePadding">20dp</item>
    <item name="android:textColor">@color/account_header_text</item>
    <item name="android:textSize">@dimen/account_header_text_size</item>
    <item name="android:background">@drawable/account_header_background</item>
  </style>

  <style name="AccountVerticalIndicator">
    <item name="android:layout_width">3dp</item>
    <item name="android:background">@drawable/vertical_indicator_statelist</item>
  </style>

  <style name="AccountLabelText" parent="@android:style/Widget.TextView">
    <item name="android:minHeight">@dimen/account_button_min_height</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingStart">@dimen/account_row_left_padding</item>
    <item name="android:textColor">@color/account_label_text</item>
    <item name="android:textSize">@dimen/account_label_text_size</item>
    <item name="android:background">@drawable/button_white_statelist</item>
  </style>

  <style name="LogbookDateButtonLabel" parent="@android:style/Widget.TextView">
    <item name="android:textSize">@dimen/logbook_date_button_label_text_size</item>
    <item name="android:textColor">@color/logbook_date_button_label_text</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="LogbookDateButton" parent="RoundButton">
    <item name="android:layout_marginTop">@dimen/logbook_date_button_top_margin</item>
    <item name="android:paddingTop">@dimen/logbook_date_buttons_vertical_padding</item>
    <item name="android:paddingBottom">@dimen/logbook_date_buttons_vertical_padding</item>
  </style>

  <style name="PatternInput" parent="android:Widget.EditText">
    <item name="android:minWidth">90dp</item>
    <item name="android:layout_marginRight">@dimen/salary_horizontal_padding</item>
    <item name="android:gravity">right</item>
    <item name="android:inputType">number</item>
    <item name="android:hint">0</item>
    <item name="android:maxLength">3</item>
    <item name="android:textColor">@color/salary_input_text</item>
    <item name="android:textSize">@dimen/salary_input_text_size</item>
  </style>

  <style name="RosterTab" parent="android:Widget.TextView">
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/roster_tab_text_size</item>
    <item name="android:textColor">@color/roster_tab_text</item>
    <item name="android:background">@color/roster_tab_background</item>
  </style>

  <style name="RoundButton" parent="@style/Widget.MaterialComponents.Button">
    <item name="android:layout_width">@dimen/round_button_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">@dimen/round_button_min_height</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/round_button_text_size</item>
    <item name="android:stateListAnimator">@null</item>
    <item name="backgroundTint">@color/colorAccent</item>
    <item name="cornerRadius">200dp</item>
    <item name="elevation">0dp</item>
  </style>

  <style name="SalaryLabel" parent="android:Widget.TextView">
    <item name="android:textSize">@dimen/salary_label_text_size</item>
    <item name="android:textColor">@color/salary_label_text</item>
    <item name="android:layout_marginLeft">@dimen/salary_horizontal_padding</item>
  </style>

  <style name="SalaryInput" parent="android:Widget.EditText">
    <item name="android:layout_marginRight">@dimen/salary_horizontal_padding</item>
    <item name="android:gravity">right</item>
    <item name="android:inputType">numberDecimal</item>
    <item name="android:maxLength">10</item>
    <item name="android:textColor">@color/salary_input_text</item>
    <item name="android:textSize">@dimen/salary_input_text_size</item>
  </style>

</resources>
