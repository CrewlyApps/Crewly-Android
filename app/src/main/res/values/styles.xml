<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CrewlySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/account_selected_indicator</item>
        <item name="android:colorForeground">@color/account_unselected_indicator</item>
        <item name="colorSwitchThumbNormal">@color/account_unselected_indicator</item>
    </style>

    <style name="AccountHeaderText" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/account_horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/account_horizontal_padding</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">@dimen/account_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/account_horizontal_padding</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textColor">@color/account_header_text</item>
        <item name="android:textSize">@dimen/account_header_text_size</item>
        <item name="android:background">@drawable/account_header_background</item>
    </style>

    <style name="AccountLabelText" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/account_label_text</item>
        <item name="android:textSize">@dimen/account_label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccountButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/account_button_text_size</item>
        <item name="android:background">@drawable/account_button_statelist</item>
    </style>

    <style name="RosterTab" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/roster_tab_text_size</item>
        <item name="android:textColor">@color/roster_tab_text</item>
        <item name="android:background">@color/roster_tab_background</item>
    </style>

</resources>
