<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.crewly">

  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:name=".app.CrewlyApp"
    android:allowBackup="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <activity
      android:name=".roster.list.RosterListActivity"
      android:label="@string/app_name"
      android:theme="@style/AppTheme.NoActionBar">

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

    </activity>

    <activity android:name=".account.AccountActivity" />
    <activity android:name=".logbook.LogbookActivity" />
    <activity android:name=".auth.LoginActivity" />
    <activity android:name=".roster.details.RosterDetailsActivity" />

  </application>

</manifest>